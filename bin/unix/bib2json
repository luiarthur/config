#!/usr/bin/env python3
import bibtexparser
import sys

if __name__ == '__main__':
    if len(sys.argv) == 0:
        print("Usage: ")
        print("    bib2json path/to/my.bib")
    else:
        # Get path to bib.
        path_to_bib = sys.argv[1]

        # Read the bib.
        with open(path_to_bib) as f:
            bib_database = bibtexparser.load(f)

        # This is json.
        bib = bib_database.entries_dict
        print(bib)
