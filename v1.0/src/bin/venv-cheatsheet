#!/bin/bash

echo "To create virtualenv:"
echo "$ python3 -m venv env"
echo

echo "To activate a virtualenv"
echo "$ source env/bin/activate"
echo

echo "To leave a virtualenv"
echo "$ deactivate"
echo

echo "To clear a virtualenv"
echo "$ virtualenv --clear env"
echo

echo "To freeze requirements"
echo "$ pip3 freeze > requirements.txt"
echo


